<Window x:Class="AdoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button x:Name="buttonBieren" Content="Bieren openen" 
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="100" 
                Click="buttonBieren_Click"></Button>
        <Button x:Name="buttonBonus" Content="Bonus" 
                HorizontalAlignment="left" VerticalAlignment="top"
                Width="100" 
                Click="buttonBonus_Click"></Button>
        <Label Content="Rekeningnr. :"></Label>
        
        <TextBox Name="textBoxRekeningNr" Width="100"
                 HorizontalAlignment="Left" VerticalAlignment="Top"
                 ></TextBox>
        <Label Content="Te Storten :"></Label>
        <TextBox Name="textBoxTeStorten" Width="100"
                 HorizontalAlignment="Left" VerticalAlignment="Top"
                 ></TextBox>
        <Button Name="buttonStorten" Content="Storten" Width="100"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                 Click="buttonStorten_Click"></Button>
        <Label x:Name="labelStatus" Content="Leeg maken"
               HorizontalAlignment="Left" VerticalAlignment="Top"
                ></Label>
    </StackPanel>
</Window>
